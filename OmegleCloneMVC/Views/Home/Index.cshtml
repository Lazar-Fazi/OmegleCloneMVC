@{
    ViewData["Title"] = "Welcome";
}

<div class="home-hero">
    <div class="hero-content">
        <img src="~/images/logo-strangly.png" alt="Strangly Logo" class="hero-logo" />
        <h1>Strangly</h1>
        <p class="subtitle">Meet New People, Instantly.</p>
        <input id="interestInput" type="text" placeholder="Enter your interests..." />
        <div class="hero-buttons">
            <button onclick="startTextChat()">Text Chat</button>
            <button onclick="startVideoChat()">Video Chat</button>
        </div>
    </div>
</div>

<footer class="home-footer">
    <div class="footer-links">
        <a href="/about">About</a>
        <a href="/rules">Rules</a>
        <a href="/privacy">Privacy</a>
        <a href="/support">Support</a>
    </div>
    <div class="footer-copy">&copy; 2025 Strangly</div>
</footer>

@section Scripts {
    <script>
        function startTextChat() {
            const interest = document.getElementById("interestInput").value;
            const url = `/Chat/Text${interest ? `?interest=${encodeURIComponent(interest)}` : ''}`;
            window.location.href = url;
        }

        function startVideoChat() {
            const interest = document.getElementById("interestInput").value;
            const url = `/Chat/Video${interest ? `?interest=${encodeURIComponent(interest)}` : ''}`;
            window.location.href = url;
        }
    </script>
}

